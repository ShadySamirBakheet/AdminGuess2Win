<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backitem"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/conlogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        android:elevation="12dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/nav_header_desc"
            android:id="@+id/imagegleaguelogo"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtleauguename"
        android:text="txtleauguename"
        android:textColor="#fff"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/conlogo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtstaertdate"
        tools:text="txtleauguename"
        android:textColor="#fff"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/conlogo"
        android:layout_below="@+id/txtleauguename"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/space"
        android:text="-->"
        android:layout_marginLeft="5dp"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/txtstaertdate"
        android:layout_below="@+id/txtleauguename"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtenddate"
        tools:text="txtleauguename"
        android:textColor="#fff"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/space"
        android:layout_below="@+id/txtleauguename"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/ic_add"
        android:layout_below="@+id/txtenddate"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"/>


</RelativeLayout>